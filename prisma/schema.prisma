// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Incident {
  id         String   @id @default(cuid())
  slug       String   @unique
  headline   String
  summary    String?
  city       String?
  state      String?
  country    String?
  occurredAt DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  dedupeKey  String   @unique

  // SEO article fields (generated by OpenAI at ingestion time)
  articleBody    String?  // Full 400-700 word SEO article
  seoTitle       String?  // SEO-optimized title (50-60 chars)
  seoDescription String?  // Meta description (150-160 chars)

  // Structured facts extracted from news sources (JSON)
  extractedFacts Json?    // Companies, vehicles, people, agencies, etc.

  sources IncidentSource[]

  @@index([occurredAt])
  @@index([city, state])
  @@index([createdAt])
}

model IncidentSource {
  id          String   @id @default(cuid())
  incident    Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  incidentId  String

  sourceType  String   // "google_news"
  url         String
  title       String
  publisher   String?
  snippet     String?
  publishedAt DateTime

  @@index([incidentId])
  @@index([publishedAt])
}

model Lead {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contact information
  name    String
  phone   String?
  email   String?
  details String?  // Optional free-text details

  // Wizard answers (stored as JSON)
  answers Json     // { who, accidentType, state, accidentDateBucket, accidentYear, injurySeverity, hasLawyer }

  // Tracking
  source    String?  // Where the lead came from (e.g., "get-help-wizard")
  ipAddress String?
  userAgent String?

  @@index([createdAt])
  @@index([email])
}
